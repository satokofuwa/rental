<h1>一覧</h1>
<table>
  <thead>
    <tr>
      <th>物件一覧</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
      <% @rentals.each do |rental| %>
        <p>物件名: <%= rental.property %></p>
        <p>賃料: <%= rental.price %></p>
        <p>住所: <%= rental.address %></p>
        <p>築年数: <%= rental.old %></p>
        <p>備考: <%= rental.content %></p>
        <%= link_to '詳細', rental_path(rental.id)%>
      <% end %>
  </tbody>
</table>
      