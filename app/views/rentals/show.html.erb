<h2>閲覧</h2>
<table>
  <tbody>
    <div class="field">
      <p>物件名: <%= @rental.property %></p>
      <p>住所: <%= @rental.address %></p> 
      <p>築年数: <%= @rental.old %></p>
      <p>備考: <%= @rental.content %></p>
      
      <% num = 1 %> 
      <% @routes.each do |form| %>
        <% if @rental.routes.any? %>
          <h1><strong>最寄駅<%= num += 1 %></strong></h1>
          <p>路線名<%= form.route1 %></p>
          <p>駅名 <%= form.station1 %> </p>
          <p>徒歩分数 <%= form.walk1 %> </p>
        <% end %>
      <% end %>
    </div>
  </tbody>
</table>
